# --- Stage 1: Build Angular app ---
FROM node:22.16-alpine AS builder

WORKDIR /app
COPY package*.json ./
COPY angular.json tsconfig.* ./
COPY src/ ./src/
COPY tailwind.config.js ./
COPY . .

RUN npm ci
RUN npm run build:patient -- --base-href /

# --- Stage 2: Serve with Nginx ---
FROM nginx:stable-alpine

COPY --from=builder /app/dist/patient/browser /usr/share/nginx/html/
COPY nginx/patient.conf /etc/nginx/conf.d/default.conf

EXPOSE 80
CMD ["nginx", "-g", "daemon off;"]
